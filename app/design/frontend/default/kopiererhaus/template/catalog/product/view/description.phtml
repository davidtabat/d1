?>
<?php $_description = $this->getProduct()->getDescription(); ?>
<?php if ($_description): ?>
<?php $_pname= $this->getProduct()->getName(); ?>
    <h2><?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $_pname, 'name') ?> - Produktbeschreibung</h2>
    <div class="std">
        <?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $_description, 'description') ?>
    </div>
<?php endif; ?>

<?php $_techdescription = $this->getProduct()->getTechdescription(); ?>
<?php if ($_techdescription): ?>
<?php $_pname= $this->getProduct()->getName(); ?>
    <h2><?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $_pname, 'name') ?> - technische Details</h2>
    <div class="std">
        <?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $_techdescription, 'techdescription') ?>
    </div>

<?php endif; ?>

<?php $_produktblock = $this->getProduct()->getProduktblock(); ?>
<?php if ($_produktblock): ?>
    <div class="std">
        <?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $_produktblock, 'produktblock') ?>
    </div>

<?php endif; ?>

