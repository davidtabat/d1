<config>
    <modules>
        <MSP_DevTools>
            <version>1.2.1</version>
        </MSP_DevTools>
    </modules>
    <global>
        <models>
            <msp_devtools>
                <class>MSP_DevTools_Model</class>
            </msp_devtools>
        </models>
        <helpers>
            <msp_devtools>
                <class>MSP_DevTools_Helper</class>
            </msp_devtools>
        </helpers>

        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <msp_devtools>
                        <type>singleton</type>
                        <class>msp_devtools/observer</class>
                        <method>coreBlockAbstractToHtmlBefore</method>
                    </msp_devtools>
                </observers>
            </core_block_abstract_to_html_before>
            <core_block_abstract_to_html_after>
                <observers>
                    <msp_devtools>
                        <type>singleton</type>
                        <class>msp_devtools/observer</class>
                        <method>coreBlockAbstractToHtmlAfter</method>
                    </msp_devtools>
                </observers>
            </core_block_abstract_to_html_after>
            <http_response_send_before>
                <observers>
                    <msp_devtools>
                        <type>singleton</type>
                        <class>msp_devtools/observer</class>
                        <method>httpResponseSendBefore</method>
                    </msp_devtools>
                </observers>
            </http_response_send_before>
        </events>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <msp_devtools>
                    <file>msp_devtools.xml</file>
                </msp_devtools>
            </updates>
        </layout>
    </adminhtml>

    <default>
        <msp_devtools>
            <general>
                <enabled>0</enabled>
                <authorized_ranges>0.0.0.0/0</authorized_ranges>
            </general>
            <phpstorm>
                <enabled>0</enabled>
                <port>8091</port>
            </phpstorm>
        </msp_devtools>
    </default>
</config>