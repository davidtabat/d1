<config>
	<sections>
		<shipment2edit translate="label" module="shipment2edit">
        	<label>Shipment2edit</label>
	        <tab>ext4mage</tab>
	        <frontend_type>text</frontend_type>
	        <sort_order>30</sort_order>
	        <show_in_default>1</show_in_default>
	        <show_in_website>1</show_in_website>
	        <show_in_store>1</show_in_store>
            <groups>
	        	<settings translate="label" module="shipment2edit">
	        		<label>General Settings</label>
			        <frontend_type>text</frontend_type>
			        <sort_order>10</sort_order>
			        <show_in_default>1</show_in_default>
			        <show_in_website>1</show_in_website>
			        <show_in_store>1</show_in_store>
                	<fields>
						<is_active translate="label">
							<label>Is modul active</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</is_active>
                    	<license_code translate="label">
							<label>License code</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</license_code>
                    	<allow_over translate="label">
							<label>Allow new shipping total to be above old amount</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[If you allow this - please make sure that this is working with your payment options]]></comment>
						</allow_over>
					</fields>
				</settings>
        	</groups>
    	</shipment2edit>
	</sections>
</config>